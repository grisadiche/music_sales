%h1 List of Equipment
%a= link_to "Add a new item", new_item_path

- @items.each do |x|
  %p
    %span= x.id
    %span= x.model
    %span= x.serial_number
    %a= link_to "Edit Item", edit_item_path(x)
    %a= link_to "Show Item", item_path(x)
    %a= link_to "Delete Item", item_path(x), method: :delete, data: { confirm: "Are you sure you'd like to delete?" }


